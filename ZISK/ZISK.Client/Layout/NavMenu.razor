<MudNavMenu Rounded="true" Margin="Margin.Dense" Color="Color.Primary" Class="pa-2">

    <MudNavLink Href="/"
                Icon="@Icons.Material.Rounded.Dashboard"
                Match="NavLinkMatch.All">
        Prehľad
    </MudNavLink>

    <MudNavLink Href="/rozvrh"
                Icon="@Icons.Material.Rounded.FitnessCenter"
                Match="NavLinkMatch.Prefix">
        Rozvrh tréningov
    </MudNavLink>

    <MudNavLink Href="/oznamy"
                Icon="@Icons.Material.Rounded.Announcement"
                Match="NavLinkMatch.Prefix">
        Oznamy
    </MudNavLink>

    <AuthorizeView Roles="Parent">
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.caption" Class="px-4 py-1" Color="Color.Secondary">Rodič</MudText>
        
        <MudNavLink Href="/dochadzka/prehlad"
                    Icon="@Icons.Material.Rounded.EventNote"
                    Match="NavLinkMatch.Prefix">
            Prehľad dochádzky
        </MudNavLink>

        <MudNavLink Href="/ospravedlnenky"
                    Icon="@Icons.Material.Rounded.Description"
                    Match="NavLinkMatch.Prefix">
            Ospravedlnenky
        </MudNavLink>
    </AuthorizeView>

    <AuthorizeView Roles="Coach,Admin">
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.caption" Class="px-4 py-1" Color="Color.Secondary">Tréner</MudText>
        
        <MudNavLink Href="/dochadzka"
                    Icon="@Icons.Material.Rounded.CheckCircle"
                    Match="NavLinkMatch.Prefix">
            Označiť dochádzku
        </MudNavLink>

        <MudNavLink Href="/admin/ospravedlnenky"
                    Icon="@Icons.Material.Rounded.Description"
                    Match="NavLinkMatch.Prefix">
            Schváliť ospravedlnenky
        </MudNavLink>
    </AuthorizeView>

    <AuthorizeView Roles="Admin">
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.caption" Class="px-4 py-1" Color="Color.Secondary">Administrácia</MudText>
        
        <MudNavLink Href="/admin"
                    Icon="@Icons.Material.Rounded.AdminPanelSettings"
                    Match="NavLinkMatch.All">
            Admin panel
        </MudNavLink>
        <MudNavLink Href="/admin/treningy"
                    Icon="@Icons.Material.Rounded.Event"
                    Match="NavLinkMatch.Prefix">
            Tréningy
        </MudNavLink>
        <MudNavLink Href="/admin/pouzivatelia"
                    Icon="@Icons.Material.Rounded.People"
                    Match="NavLinkMatch.Prefix">
            Používatelia
        </MudNavLink>
        <MudNavLink Href="/admin/statistiky"
                    Icon="@Icons.Material.Rounded.Analytics"
                    Match="NavLinkMatch.Prefix">
            Štatistiky
        </MudNavLink>
    </AuthorizeView>

    <MudDivider Class="my-2" />
    
    <MudNavLink Href="/logout"
                Icon="@Icons.Material.Rounded.Logout"
                Match="NavLinkMatch.All"
                ForceLoad="true">
        Odhlásiť sa
    </MudNavLink>
</MudNavMenu>