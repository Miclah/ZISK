@page "/admin/statistiky"
@using ZISK.Client.Services
@using ZISK.Shared.DTOs.Teams
@inject ITeamsApi TeamsApi
@inject ISnackbar Snackbar
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Štatistiky</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">Štatistiky klubu</MudText>

@if (_isLoading)
{
    <MudProgressLinear Indeterminate="true" Color="Color.Primary" />
}
else
{
    <MudGrid>
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-3">Členovia podľa tímu</MudText>
                <MudSimpleTable Dense="true" Hover="true">
                    <thead>
                        <tr>
                            <th>Tím</th>
                            <th>Počet členov</th>
                            <th>Stav</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var team in _teams)
                        {
                            <tr>
                                <td>@team.Name</td>
                                <td>@team.MemberCount</td>
                                <td>
                                    @if (team.IsActive)
                                    {
                                        <MudChip T="string" Size="Size.Small" Color="Color.Success">Aktívny</MudChip>
                                    }
                                    else
                                    {
                                        <MudChip T="string" Size="Size.Small" Color="Color.Error">Neaktívny</MudChip>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </MudSimpleTable>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-3">Súhrn</MudText>
                <MudSimpleTable Dense="true">
                    <tbody>
                        <tr>
                            <td>Celkom tímov</td>
                            <td><strong>@_teams.Count</strong></td>
                        </tr>
                        <tr>
                            <td>Celkom členov</td>
                            <td><strong>@_teams.Sum(t => t.MemberCount)</strong></td>
                        </tr>
                        <tr>
                            <td>Aktívnych tímov</td>
                            <td><strong>@_teams.Count(t => t.IsActive)</strong></td>
                        </tr>
                    </tbody>
                </MudSimpleTable>
            </MudPaper>
        </MudItem>
        <MudItem xs="12">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-3">Priemerná účasť za posledný mesiac</MudText>
                <MudGrid>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.h4" Color="Color.Success">85%</MudText>
                        <MudText Typo="Typo.body2">Celková účasť</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.h4" Color="Color.Error">8%</MudText>
                        <MudText Typo="Typo.body2">Neospravedlnené absencie</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.h4" Color="Color.Info">5%</MudText>
                        <MudText Typo="Typo.body2">Ospravedlnené</MudText>
                    </MudItem>
                    <MudItem xs="6" sm="3">
                        <MudText Typo="Typo.h4" Color="Color.Warning">2%</MudText>
                        <MudText Typo="Typo.body2">Meškanie</MudText>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
}

@code {
    private bool _isLoading = true;
    private List<TeamDto> _teams = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _teams = await TeamsApi.GetTeamsAsync(null);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Chyba: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }
}